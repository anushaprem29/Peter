<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:id="@+id/layoutIdMain"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.rasha.anusha.peter.MainActivity">
    <EditText
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#FFFFFF"
        android:inputType="textFilter"
        android:textSize="25dp"
        android:textAlignment="center"
        android:id="@+id/editmain"
        android:background="@drawable/bg2"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#7ec0ee"
        android:layout_marginTop="14dp"
        android:textSize="20dp"
        android:id="@+id/textmain"
        android:textAlignment="center"
        android:text="Enter your command"
        android:layout_alignTop="@+id/editmain"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#7ec0ee"
        android:layout_below="@+id/textmain"
        android:id="@+id/question"
        android:background="@drawable/bg2"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textColorHint="#7ec0ee"
        android:hint="Please enter your question right here!"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:textSize="20dp"
        android:id="@+id/answer"
        android:textAlignment="center"
        android:background="@drawable/bg2"
        android:textColor="#7ec0ee"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/question"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/answer"
        android:id="@+id/okayButton"
        android:layout_marginTop="50dp"
        android:text="Okay!"
        android:background="@drawable/bg2"
        />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/helpicon"
        android:id="@+id/info"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="67dp" />

</RelativeLayout>
</ScrollView>
